{
    "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
    "css": {
        "formatter": {
            "enabled": true,
            "indentStyle": "space"
        },
        "linter": {
            "enabled": true
        }
    },
    "files": {
        "ignore": [
            "*/css/*.min.css"
        ]
    },
    "formatter": {
        "attributePosition": "auto",
        "enabled": true,
        "formatWithErrors": false,
        "ignore": [],
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "quoteStyle": "double",
            "semicolons": "always",
            "trailingCommas": "all"
        },
        "linter": {
            "enabled": true
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "all": true,
            "suspicious": {
                "noConsole": "off",
                "noConsoleLog": "off"
            },
            "correctness": {
                "noNodejsModules": "off"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
